@model VirtualLibrary.Models.MemberModel

@{
    ViewData["Title"] = "End Membership";
}
<br />

<div class="row" id="MembershipCard">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Are you sure you want to end your membership?</h4><hr>
            <p class="card-text">
                Ending your membership will result in no longer having access to our books.<br />
                If you click confirm, your membership will end and you will no longer be charged for the next month.<br />
                You will still have access to our books until this months membership expires.<br />
                If you have changed your mind, please click cancel.
            </p>
            <br />
            <div class="confirmCancelDiv">
            <a class="btn endBtn text-white" onclick="location.href='@Url.Action("MembershipDetails", "Member")'">Cancel</a>

                <a class="btn endBtn text-white" asp-action="ActionEndMembership" asp-controller="Member">Confirm</a>
            </div>

        </div>
    </div>
</div>
