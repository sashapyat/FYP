@model VirtualLibrary.Models.UsersAndMembersModel
@{
    ViewData["Title"] = "User Details";
}

<br />
<h1 class="display-6 text-center">User Details</h1>
<br />


<table id="AdminUserTable">

    @if(Model.Member == null && Model.User != null)
    {
        
            <tr>
                <th>User ID</th>
                <td>@Html.DisplayFor(model => model.User.UserId)</td>
            </tr>
            <tr>
                <th>First Name</th>
                <td>@Html.DisplayFor(model => model.User.FirstName)</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>@Html.DisplayFor(model => model.User.LastName)</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>@Html.DisplayFor(model => model.User.Username)</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Html.DisplayFor(model => model.User.Email)</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>@Html.DisplayFor(model => model.User.Role)</td>
            </tr>
        
    }
    else if (Model.Member != null)
    {
        
            <tr>
                <th>User ID</th>
                <td>@Html.DisplayFor(model => model.Member.UserId)</td>
            </tr>
            <tr>
                <th>First Name</th>
                <td>@Html.DisplayFor(model => model.Member.FirstName)</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>@Html.DisplayFor(model => model.Member.LastName)</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>@Html.DisplayFor(model => model.Member.Username)</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Html.DisplayFor(model => model.Member.Email)</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>@Html.DisplayFor(model => model.Member.Role)</td>
            </tr>
            <tr>
                <th>Start Date</th>
                <td>@Html.Raw(Model.Member.StartDate.ToString("dd/MM/yyyy"))</td>
            </tr>
            <tr>
                <th>End Date</th>
                <td>@Html.DisplayFor(model => model.Member.EndDate)</td>
            </tr>
            <tr>
                <th>Total Books</th>
                <td>@Html.DisplayFor(model => model.Member.TotalBooks)</td>
            </tr>
            
        
    }

</table>